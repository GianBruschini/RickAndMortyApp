<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="170dp"
        android:layout_height="190dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"

        >

        <ImageView
            android:id="@+id/imageOfCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"

            >
        </ImageView>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="160dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/cardView1"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/nameOfCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />



            <TextView
                android:id="@+id/stateOfCharacter"
                android:layout_below="@id/nameOfCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/specieOfCharacter"
                android:layout_below="@id/stateOfCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/genreOfCharacter"
                android:layout_below="@id/specieOfCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/locationOfCharacter"
                android:layout_below="@id/genreOfCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_light"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="12sp"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>